<div class="container">
    <div >
        <img  src="https://cdn0.iconfinder.com/data/icons/food-2-11/128/food-13-512.png" alt="Burger Icon" id="burgerLogo"/>
        <h1  id="title"> Eat Da Burger</h1>
    </div>

    <div id="burgerDiv" class="container">
        <div id="burgersDivEat" >
            <h2>Burgers to Eat</h2>

            <ul id="burgerListEat">
            {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                        <button class="change-devoured btn btn-warning" data-id="{{id}}" data-newdevoured="{{devoured}}">
                        Devour
                        </button>
        
                        <button class="deleteBurger btn btn-warning" data-id="{{id}}">
                        Delete
                        </button>
                       
                </li>
                {{/unless}}
            {{/each}}
            </ul>
        </div>

        <div id="burgersDivDevo" >
            <h2>Burgers that are devoured</h2>

            <ul id="burgerListDevo">
            {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                        
                        <button  class="deleteBurger btn btn-warning" data-id="{{id}}">
                        Delete
                        </button>
                        
                </li>
                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>

    <div id="addBurger">
        <h2>Add a Burger</h2>
            <form class="create-form">

            <div class="form-group">
                <label for="bur">Burger Name</label>
                <textarea class="form-control" id="bur" rows="2" name="name"></textarea>
            </div>


            <button class="btn btn-primary" type="submit">Add Burger</button>
            </form>
    </div>
</div>
